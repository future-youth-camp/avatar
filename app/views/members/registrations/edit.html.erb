<h2 class="hug push">Redigera din profil</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field push">
    <%= f.text_field :name, autofocus: true, placeholder: 'Namn' %><br>
    <%= f.email_field :email, autofocus: true, placeholder: 'E-postadress' %><br>
    <%= f.submit "Uppdatera detaljer", class: 'primary push' %>
  </div>
  <div class="field push">
    <h3>Byt lösenord:</h3>
    <%= f.password_field :current_password, autocomplete: "off", placeholder: 'Nuvarande Lösenord' %><br>
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Lösenord' %><br>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Bekräfta Lösenord' %><br>
    <%= f.submit "Byt lösenord" %>
  </div>
<% end %>
  <br>
  <div class="field push">
    <%= button_to 'Cancel my account', registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: :warning %>
  </div>
  <br>
  <div class="field">
    <%= button_to "Back", :back %>
  </div>
